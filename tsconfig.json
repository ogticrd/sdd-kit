{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2016",
    "outDir": "dist",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "declaration": true,
    "declarationDir": "types",
    "emitDeclarationOnly": true
  },
  "exclude": ["stories"]
}
